{
  "name": "document-sorter",
  "version": "1.0.0",
  "description": "A desktop application for sorting documents using drag and drop",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --watchAll=false --maxWorkers=1 --maxOldSpaceSize=4096",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "dist": "electron-builder --publish=never",
    "ci": "npm run lint && npm run test:ci"
  },
  "keywords": [
    "electron",
    "desktop",
    "file-sorting",
    "drag-and-drop",
    "document-management"
  ],
  "author": "Jesse Brown",
  "license": "MIT",
  "homepage": "https://github.com/jessebrown/document-sorter",
  "repository": {
    "type": "git",
    "url": "https://github.com/jessebrown/document-sorter.git"
  },
  "devDependencies": {
    "electron": "^38.1.2",
    "electron-builder": "^24.6.4",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "franc": "^5.0.0",
    "mammoth": "^1.6.0",
    "mime-types": "^2.1.35",
    "natural": "^6.7.0",
    "pdf-parse": "^1.1.1",
    "puppeteer": "^24.22.2",
    "sharp": "^0.33.5",
    "tesseract.js": "^5.1.0"
  },
  "build": {
    "appId": "com.jessebrown.document-sorter",
    "productName": "Document Sorter",
    "copyright": "Copyright Â© 2025 Jesse Brown",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "config/**/*",
      "package.json",
      "!**/node_modules/**/*",
      "!tests/**/*",
      "!coverage/**/*"
    ],
    "extraResources": [
      {
        "from": "config/",
        "to": "config/"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
