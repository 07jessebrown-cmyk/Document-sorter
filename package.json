{
  "name": "document-sorter",
  "version": "1.0.0",
  "description": "A desktop application for sorting documents using drag and drop",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "rebuild": "npx electron-rebuild",
    "build:mac": "npx electron-builder --mac --x64 --arm64",
    "build:win": "npx electron-builder --win --x64",
    "build:all": "npx electron-builder --mac --win --x64 --arm64",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:functional": "jest tests/functional --runInBand --detectOpenHandles",
    "test:ci": "NODE_OPTIONS='--max-old-space-size=8192 --expose-gc' jest --coverage --watchAll=false --maxWorkers=1 --testPathPattern='tests/(fileService|ai_prompts|usability|performance|aiTextService|aiTextService-batching|ai-integration|integration-simple|integration-bilingual|integration|llmClient|parsingService|renamingService|unit/signatureDetector|unit/langService).test.js'",
    "test:ci-mock": "MOCK_AI_SERVICES=true jest --coverage --watchAll=false --maxWorkers=1 --maxOldSpaceSize=4096",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test:ci && npm run test:e2e",
    "test:security": "node tests/security/run-security-tests.js",
    "test:security:unit": "jest --config tests/security/jest.config.js",
    "test:security:penetration": "node tests/security/penetration-tests.js",
    "test:security:integrity": "node tests/security/integrity-verification-tests.js",
    "test:security:deployment": "node tests/security/deployment-validation-tests.js",
    "test:security:coverage": "jest --config tests/security/jest.config.js --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "dist": "electron-builder --publish=never",
    "dist:mac": "electron-builder --mac --publish=never",
    "dist:win": "electron-builder --win --publish=never",
    "dist:linux": "electron-builder --linux --publish=never",
    "validate:sharp": "node scripts/validate-sharp.js",
    "verify:installers": "node scripts/verify-installers.js",
    "test:packaged-sharp": "node scripts/test-packaged-sharp.js",
    "rebuild:sharp": "bash scripts/rebuild-sharp-safe.sh",
    "ci": "npm run lint && npm run test:ci",
    "ci:security": "npm run lint && npm run test:ci && npm run test:security",
    "rollout": "node scripts/rollout-manager.js",
    "rollout:status": "node scripts/rollout-manager.js status",
    "rollout:add-user": "node scripts/rollout-manager.js add-user",
    "rollout:update": "node scripts/rollout-manager.js update-rollout"
  },
  "keywords": [
    "electron",
    "desktop",
    "file-sorting",
    "drag-and-drop",
    "document-management"
  ],
  "author": "Jesse Brown",
  "license": "MIT",
  "homepage": "https://github.com/jessebrown/document-sorter",
  "repository": {
    "type": "git",
    "url": "https://github.com/jessebrown/document-sorter.git"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "electron": "^38.1.2",
    "electron-builder": "^24.6.4",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "mammoth": "^1.6.0",
    "mime-types": "^2.1.35",
    "natural": "^6.7.0",
    "openai": "^6.3.0",
    "pdf-parse": "^1.1.1",
    "pdf-poppler": "^0.2.3",
    "pdf2pic": "^3.2.0",
    "puppeteer": "^24.22.2",
    "sharp": "^0.33.5",
    "tesseract.js": "^5.1.0"
  },
  "build": {
    "appId": "com.jessebrown.document-sorter",
    "productName": "Document Sorter",
    "copyright": "Copyright Â© 2025 Jesse Brown",
    "asar": true,
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "package.json",
      "node_modules/**/*",
      "config/**/*",
      "build/**/*",
      "eng.traineddata"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.png",
      "artifactName": "${productName}-${version}-mac-${arch}.${ext}"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "build/icon.png",
      "artifactName": "${productName}-${version}-win-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}
